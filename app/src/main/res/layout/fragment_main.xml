<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck"
    tools:context=".MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/cityscape" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/hotelview"
        android:layout_width="69dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="83dp"
        android:src="@drawable/hotel" />

    <ImageView
        android:id="@+id/houseview"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/hotelview"
        android:layout_marginEnd="76dp"
        android:src="@drawable/house" />

    <ImageView
        android:id="@+id/busview"
        android:layout_width="73dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/hotelview"
        android:layout_marginTop="191dp"
        android:src="@drawable/bus" />

    <ImageView
        android:id="@+id/placeview"
        android:layout_width="69dp"
        android:layout_height="73dp"
        android:layout_alignStart="@+id/houseview"
        android:layout_alignTop="@+id/busview"
        android:src="@drawable/map" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/hotelview"
        android:layout_below="@+id/hotelview"
        android:text="HOTELS" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/houseview"
        android:layout_alignTop="@+id/textView"
        android:text="GUEST HOUSE" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/hotelview"
        android:layout_below="@+id/busview"
        android:text="TRANSPORT" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/houseview"
        android:layout_alignTop="@+id/textView3"
        android:text="PLACES TO VISIT" />


</RelativeLayout>